datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Chatter {
  username           String   @id @unique
  failedPyramids     Int
  successfulPyramids Int
  createdOn          DateTime @default(now())
  modifiedOn         DateTime @updatedAt
}

model MinionType {
  id    Int    @id @unique
  name  String
  slug  String
  cards Card[]

  createdOn  DateTime @default(now())
  modifiedOn DateTime @updatedAt
}

model Card {
  id          Int          @id @unique
  slug        String
  minionTypes MinionType[]
  health      Int
  attack      Int?
  manaCost    Int
  name        String
  text        String
  tier        Int?
  armor       Int?
  isHero      Boolean
  isQuest     Boolean
  upgradeId   Int?

  createdOn  DateTime @default(now())
  modifiedOn DateTime @updatedAt
}
