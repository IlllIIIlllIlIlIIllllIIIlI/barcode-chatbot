{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "target": "es6",
    "skipLibCheck": true,
    "sourceMap": false,
    "pretty": false,
    "declaration": false,
    "strictNullChecks": true,
    "typeRoots": ["./global.d.ts", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"]
}
